---
import Layout from "../components/layout.astro";
import "../styles/global.css";

const meta = {
    ...Astro.props.meta,
};
---

<Layout {meta}>
    <div id="centered-layout-container">
        <slot />
    </div>
</Layout>

<style>
    #centered-layout-container {
        height: 100vh;
        display: grid;
        place-content: center center;
    }
</style>
